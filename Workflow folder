name: FaselHD 2025 Movies Scraper

# Run daily at 2:00 AM UTC
on:
  schedule:
    - cron: '0 2 * * *'
  workflow_dispatch:

jobs:
  scrape-and-commit:
    runs-on: ubuntu-latest

    steps:
      # 1. Checkout the repo
      - name: Checkout repository
        uses: actions/checkout@v4

      # 2. Set up Node.js
      - name: Setup Node.js
        uses: actions/setup-node@v3
        with:
          node-version: '20'

      # 3. Install dependencies
      - name: Install dependencies
        run: |
          npm install node-fetch@2 cheerio

      # 4. Run scraper
      - name: Run scraper
        run: node scraper.js

      # 5. Commit updated playlist
      - name: Commit and push playlist
        run: |
          git config --global user.name "github-actions"
          git config --global user.email "github-actions@github.com"
          git add playlist.json
          git commit -m "Auto-update 2025 movies playlist [skip ci]" || echo "No changes to commit"
          git push
        env:
          GITHUB_TOKEN: ${{ secrets.GITHUB_TOKEN }}
